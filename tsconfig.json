{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    // import from "../../../src/app => import from "app"
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "./node_modules",
  ],
  "include": [
    "./.eslintrc.js",
    "./webpack.config.ts",
    "./config/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}